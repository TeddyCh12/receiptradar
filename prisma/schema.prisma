datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")  // pooled
  directUrl = env("DIRECT_URL")  // unpooled for migrations/introspection
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id        String    @id @default(cuid())
  email     String    @unique
  receipts  Receipt[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Merchant {
  id        String    @id @default(cuid())
  name      String
  domain    String?
  receipts  Receipt[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([domain])
}

model Receipt {
  id             String    @id @default(cuid())
  account        Account   @relation(fields: [accountId], references: [id])
  accountId      String
  merchant       Merchant? @relation(fields: [merchantId], references: [id])
  merchantId     String?
  orderId        String?
  emailMessageId String? // Message-ID for dedupe
  totalCents     Int
  currency       String    @default("USD")
  purchasedAt    DateTime
  rawSource      Json?
  rawText        String?
  items          Item[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  @@unique([accountId, emailMessageId])
  @@index([purchasedAt])
  @@index([merchantId])
  @@index([accountId, purchasedAt])
}

model Item {
  id             String   @id @default(cuid())
  receipt        Receipt  @relation(fields: [receiptId], references: [id])
  receiptId      String
  sku            String?
  name           String
  qty            Int      @default(1)
  unitPriceCents Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([receiptId])
}
